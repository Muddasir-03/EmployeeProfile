@model AspiraApp.AspRegister

@{
    ViewBag.Title = "Login";
}

@{
    Layout = null;

}

<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>




<body>

    <div class="bgimg">
        


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 style="padding-top:5%;">Admin Login</h2>
            <div class="container h-75 ms-5">
                <div class="row align-items-center h-100">
                    <div class="col-sm-4 offset-sm-4">


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row mb-3">
                            @Html.LabelFor(model => model.User_Id, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="row-cols-md-1" id="inp">
                                @Html.TextBoxFor(model => model.User_Id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.User_Id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div class="row mb-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="row-cols-md-1" id="inp">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" id="btn">

                            @Html.ActionLink("Sign up", "Register", "Home", new { @class = "btn btn-outline-dark" })

                            <div class="col-md-offset-2">
                                <input type="submit" value="Login" class="btn btn-outline-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</body>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        font-size: 20px;
        font-family: sans-serif;
    }

    h2 {
        width: 100%;
        text-align: center;
    }

    #inp {
        border-radius: 4px;
    }

    #btn {
        width: 100%;
        display: flex;
        padding: 30px 30px;
        gap: 120px;
    }
    .bgimg{
        background-image:url(/Images/lg.jpg);
        height:100vh;
        width:100%;
        background-size:cover;
        background-position:center;
        
    }
    button, input, optgroup, select, textarea {
        border-radius: 5px;
    }
</style>

